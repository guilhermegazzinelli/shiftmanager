<p id="notice"><%= notice %></p>

<h1>Colaborators</h1>

<table>
  <thead>
    <tr>
      <th>Operation</th>
      <th>Name</th>
      <th>Company number</th>
      <th>Personal number</th>
      <th>Email</th>
      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colaborators.each do |colaborator| %>
      <tr>
        <td><%= colaborator.operation %></td>
        <td><%= colaborator.name %></td>
        <td><%= colaborator.company_number %></td>
        <td><%= colaborator.personal_number %></td>
        <td><%= colaborator.email %></td>
        <td><%= colaborator.area %></td>
        <td><%= link_to 'Show', colaborator %></td>
        <td><%= link_to 'Edit', edit_colaborator_path(colaborator) %></td>
        <td><%= link_to 'Destroy', colaborator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

